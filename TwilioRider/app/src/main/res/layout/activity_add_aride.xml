<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.twilio.mchopra.demoapp.Activity.AddARideActivity">

    <TextView
        android:id="@+id/textview_set_date_add_ride"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Date"
        android:textColor="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textSize="16sp"/>


    <ImageView
        android:id="@+id/logo_image_view_add_ride"
        android:layout_width="100sp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/textview_set_date_add_ride"
        android:layout_centerHorizontal="true"
        android:src="@drawable/img_view"/>

    <Button
        android:id="@+id/btn_add_date_add_ride"
        android:layout_width="223dp"
        android:layout_height="59dp"
        android:layout_alignStart="@id/btn_add_time_add_ride"
        android:layout_below="@+id/textview_set_date_add_ride"
        android:layout_marginTop="18dp"
        android:text="Select Date"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textview_set_time_add_ride"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_add_date_add_ride"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Set Time"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp" />


    <ImageView
        android:id="@+id/logo_image_view_1_add_ride"
        android:layout_width="100sp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/textview_set_time_add_ride"
        android:layout_centerHorizontal="true"
        android:src="@drawable/img_view"/>


    <Button
        android:id="@+id/btn_add_time_add_ride"
        android:layout_width="220dp"
        android:layout_height="59dp"
        android:layout_below="@+id/textview_set_time_add_ride"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Select Time"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textview_set_from_address_add_ride"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_add_time_add_ride"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Address"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp" />


    <ImageView
        android:id="@+id/logo_image_view_2_add_ride"
        android:layout_width="100sp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/textview_set_from_address_add_ride"
        android:layout_centerHorizontal="true"
        android:src="@drawable/img_view" />

    <EditText
        android:id="@+id/address_text"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_below="@+id/textview_set_from_address_add_ride"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="@dimen/dimen_32dp"
        android:layout_marginRight="@dimen/dimen_32dp"
        android:ems="10"
        android:hint="Ride From"
        android:inputType="number"
        android:lines="1" />

    <TextView
        android:id="@+id/textview_set_to_address_add_ride"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Destination"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp" />


    <ImageView
        android:id="@+id/logo_image_view_3_add_ride"
        android:layout_width="100sp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/textview_set_to_address_add_ride"
        android:layout_centerHorizontal="true"
        android:src="@drawable/img_view" />

    <RadioGroup
        android:id="@+id/rideTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_image_view_3_add_ride"
        android:layout_centerHorizontal="true">

        <RadioButton
            android:id="@+id/ride_to_mv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_mv" />

        <RadioButton
            android:id="@+id/ride_to_sf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/radio_sf" />

    </RadioGroup>

    <Button
        android:id="@+id/btn_request_ride"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_below="@id/rideTo"
        android:text="Request Ride"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"/>




</RelativeLayout>
